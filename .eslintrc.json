
{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    // Express router path
    "import/no-unresolved": 0,
    "import/extensions": 0,

    // Development
    "no-console": 0,

    // Typescript Classes / Enum rules
    "no-shadow": 0,
    "@typescript-eslint/no-shadow": ["error"],
    "@typescript-eslint/no-unused-vars": "error",

    "import/first": 0
  }
}
